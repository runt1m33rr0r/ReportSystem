@model ReportStatusViewModel
@using ReportSystem.Data.Models;

<form class="mt-3" method="POST" asp-controller="Reports" asp-action="SetReportStatus">
    <input type="hidden" asp-for="@Model.ID" value="@Model.ID" />
    <input type="hidden" asp-for="@Model.Page" value="@Model.Page" />
    <input type="hidden" asp-for="@Model.Search" value="@Model.Search" />
    <input type="hidden" asp-for="@Model.Order" value="@Model.Order" />
    <input type="hidden" asp-for="@Model.StatusFilter" value="@Model.StatusFilter" />

    <div class="form-group">
        <label asp-for="Resolution"></label>
        <textarea class="form-control" asp-for="@Model.Resolution" value="@Model.Resolution" rows="4"></textarea>
        <span asp-validation-for="@Model.Resolution" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="@Model.Status">State</label>
        <select class="form-control" asp-for="@Model.Status" value="@Model.Status">
            @if (Model.Status != ReportStatus.IN_PROGRESS)
            {
                <option value="@ReportStatus.IN_PROGRESS">In progress</option>
            }

            @if (Model.Status != ReportStatus.RESOLVED)
            {
                <option value="@ReportStatus.RESOLVED">Resolved</option>
            }

            @if (Model.Status != ReportStatus.REFUSED)
            {
                <option value="@ReportStatus.REFUSED">Refused</option>
            }
        </select>
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
</form>