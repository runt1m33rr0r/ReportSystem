@model DeleteReportViewModel

@{
    string modalId = $"modal{Model.ID}";
    string modalIdReference = $"#{modalId}";
}

<div class="modal fade" id="@modalId" role="dialog">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Delete report</h5>
                <button type="button" class="close" data-dismiss="modal">
                    <span>&times;</span>
                </button>
            </div>
            <div class="modal-body">
                Are you sure you want to delete this report?
            </div>
            <div class="modal-footer">                
                <form method="POST" asp-controller="Reports" asp-action="DeleteReport">
                    <input type="hidden" asp-for="ID" value="@Model.ID" />
                    <input type="hidden" asp-for="Page" value="@Model.Page" />
                    <input type="hidden" asp-for="Search" value="@Model.Search" />
                    <input type="hidden" asp-for="Order" value="@Model.Order" />
                    <input type="hidden" asp-for="StatusFilter" value="@Model.StatusFilter" />
                    <input type="hidden" asp-for="ShowPersonalReports" value="@Model.ShowPersonalReports" />

                    <button type="submit" class="btn btn-danger">Delete</button>
                </form>

                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
            </div>
        </div>
    </div>
</div>

<button 
    type="button" 
    class="btn btn-danger ml-3" 
    data-toggle="modal" 
    data-target="@modalIdReference">
    Delete
</button>